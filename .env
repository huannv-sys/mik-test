# Flask configuration
FLASK_APP=mik
FLASK_ENV=development
FLASK_DEBUG=1

# Security keys
SECRET_KEY=dev_secret_key_change_in_production
WTF_CSRF_SECRET_KEY=dev_csrf_key_change_in_production
JWT_SECRET_KEY=dev_jwt_key_change_in_production
ENCRYPTION_KEY=c0RodXJ2cHdYODZXbXRTX29pbXcyRHFfSElXVEhEeG89

# JWT configuration
JWT_ACCESS_TOKEN_EXPIRES_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRES_DAYS=30
JWT_COOKIE_SECURE=0
JWT_COOKIE_CSRF_PROTECT=1

# CORS configuration
CORS_ALLOWED_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# Database connection
# Ensure it's an absolute path with proper permissions
DATABASE_URL=sqlite:///mikrotik_monitor.db

# MikroTik connection settings
MIKROTIK_CONNECTION_TIMEOUT=10
MIKROTIK_COMMAND_TIMEOUT=15
MIKROTIK_BACKUP_TIMEOUT=60
MIKROTIK_RESTORE_TIMEOUT=120

