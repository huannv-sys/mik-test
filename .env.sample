# Flask Configuration
FLASK_APP=main.py
FLASK_ENV=development
FLASK_DEBUG=1

# Security Keys
SECRET_KEY=change_to_a_secure_random_key
JWT_SECRET_KEY=change_to_a_secure_random_key
WTF_CSRF_SECRET_KEY=change_to_a_secure_random_key

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRES_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRES_DAYS=30
JWT_COOKIE_SECURE=0
JWT_COOKIE_CSRF_PROTECT=1

# Database Configuration
DATABASE_URL=sqlite:///instance/mikrotik_monitor.db

# MikroTik Connection Settings
MIKROTIK_CONNECTION_TIMEOUT=10
MIKROTIK_COMMAND_TIMEOUT=15
MIKROTIK_BACKUP_TIMEOUT=60
MIKROTIK_RESTORE_TIMEOUT=120

